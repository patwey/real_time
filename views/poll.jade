doctype html
html(lang='en')
  head
    title= "Poll: " + poll.title
  body
    h1= "Poll: " + poll.title
    div.status
      span= "Poll is currently "
      strong
        span(id=poll.id + '-poll-status')= poll.status
    
    div.options
      ul
        each option in poll.options
          li
            span= option + " "
            button.option-btn(data-id=poll.id, data-vote=option) Vote
          br
  
    script(src='/socket.io/socket.io.js')
    script(src='/scripts/client.js')
    
